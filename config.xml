	<!--<plugin name="https://github.com/AubreyHewes/cordova-background-audio.git" />-->

    <icon src="www/icon.png" />	
	<platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="www/res/android/ldpi.png" density="ldpi" />
        <icon src="www/res/android/mdpi.png" density="mdpi" />
        <icon src="www/res/android/hdpi.png" density="hdpi" />
        <icon src="www/res/android/xhdpi.png" density="xhdpi" />
        <icon src="www/res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="www/res/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
	
    <icon src="www/res/icon/ios/icon-57.png"            gap:platform="ios"		width="57" height="57" />
    <icon src="www/res/icon/ios/icon-72.png"            gap:platform="ios"		width="72" height="72" />
    <icon src="www/res/icon/ios/icon-57-2x.png"         gap:platform="ios"		width="114" height="114" />
    <icon src="www/res/icon/ios/icon-72-2x.png"         gap:platform="ios"		width="144" height="144" />
	<icon src="www/res/icon/ios/120.png"				gap:platform="ios"		width="120" height="120" />
	<icon src="www/res/icon/ios/76.png"					gap:platform="ios"		width="76" height="76" />
	<icon src="www/res/icon/ios/152.png"				gap:platform="ios"		width="152" height="152" />

    <gap:config-file platform="ios" parent="CFBundleShortVersionString">
    <string>201</string>
    </gap:config-file>

    <access origin="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
	<allow-intent href="soundcloud:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	
	<platform name="android">
		<resource-file src="google-services.json" target="app/google-services.json" />
		<resource-file src="res/drawable-mdpi/ic_stat_icon.png" target="/res/drawable-mdpi/ic_stat_icon.png" />
		<resource-file src="res/drawable-hdpi/ic_stat_icon.png" target="/res/drawable-hdpi/ic_stat_icon.png" />
		<resource-file src="res/drawable-xhdpi/ic_stat_icon.png" target="/res/drawable-xhdpi/ic_stat_icon.png" />
		<resource-file src="res/drawable-xxhdpi/ic_stat_icon.png" target="/res/drawable-xxhdpi/ic_stat_icon.png" />
		<resource-file src="res/drawable-xxxhdpi/ic_stat_icon.png" target="/res/drawable-xxxhdpi/ic_stat_icon.png" />
	</platform>

</widget>